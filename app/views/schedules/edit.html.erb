<div class="main_container">
  <div class="information">
    <h2>スケジュール編集</h2>
  </div>
  <%= form_with model: @schedule do |f| %>
    <table>
      <tbody>
        <tr>
          <th>
            <%= f.label :title ,"タイトル" %>
          </th>
          <td>
            <%= f.text_field :title %>
          </td>
        </tr>
        <tr>
          <th>
            <%=f.label:start_date,"開始日" %>
          </th>
          </th>
          <td>
            <%= f.date_field :start_date %>
          </td>
        </tr>
        <tr>
          <th>
            <%=f.label:end_date,"終了日" %>
          </th>
          </th>
          <td>
            <%= f.date_field :end_date %>
          </td>
        </tr>
        <tr>
          <th>
            <%=f.label:all_day,"終日" %>
          </th>
          <td>
            <%= f.check_box :all_day,:as => :boolean %>
          </td>
        </tr>
        <tr>
          <th>
            <%=f.label:schedule_memo,"スケジュールメモ" %>
          </th>
          <td>
            <%= f.text_field :schedule_memo %>
          </td>
        </tr>
      </tbody>
    </table>
    <div>
      <ul>
        <li>
          <%= f.submit "スケジュールの編集を完了する" %>
        </li>
        <li>
          <%= link_to "スケジュール一覧に戻る", :schedules %>
        </li>
      </ul>
    </div>
    <% end %>
      </form>
</div>

