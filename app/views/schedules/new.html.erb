<div class="main_container">
  <div class="information">
    <h2>スケジュール新規作成</h2>
    <%= render "shared/error", obj: @schedule %>
  </div>
  <%= form_with model: @schedule do |f| %>
    <table>
      <tbody>
        <tr>
          <th>
            <%=f.label:title,"タイトル" %>
          </th>
          <td>
            <%= f.text_field :title %>
          </td>
        </tr>
        <tr>
          <th>
            <%=f.label:start_date,"開始日" %>
          </th>
          </th>
          <td>
            <%= f.date_field :start_date %>
          </td>
        </tr>
        <tr>
          <th>
            <%=f.label:end_date,"終了日" %>
          </th>
          </th>
          <td>
            <%= f.date_field :end_date %>
          </td>
        </tr>
        <tr>
          <th>
            <%=f.label:all_day,"終日" %>
          </th>
          <td>
            <%= f.check_box :all_day,:as => :boolean %>
          </td>
        </tr>
        <tr>
          <th>
            <%=f.label:schedule_memo,"スケジュールメモ" %>
          </th>
          <td>
            <%= f.text_area :schedule_memo %>
          </td>
        </tr>
      </tbody>
    </table>
    <div>
      <ul>
        <li>
          <%= f.submit"スケジュールを新規登録する"%>
        </li>
        <li>
          <%= link_to "スケジュール一覧に戻る", :schedules %>
        </li>
      </ul>
    </div>
    </form>
</div>
<% end %>
